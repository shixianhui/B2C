/* pages/member/m-info/m-info.wxss */

form{width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;padding:0 15px;}
form .input-box{border-bottom:1px solid #f5f5f5;width:100%;line-height:26px;padding:7px 0;display: flex;}
form label{width:calc(60%);float:left;font-size:15px;color:#333;}
form navigator{float:right;font-size:14px;line-height:26px;color:#ff4949;width:calc(100%);text-align:right}
form input{width:calc(100%);float:right;font-size:15px;color:#333;line-height:26px;height:26px;}
form .input-box view{width:100%;float:left;}
form .input-box view .radio-group label{width:35%;line-height:25px;vertical-align:top;}
form .input-box view .radio-group label radio{vertical-align:top;line-height:20px;}
form .input-box picker{font-size:15px;color:#333;width:calc(100%);float:right;text-align:left}
form .input-box picker view{width:100%;}
form .city{font-size:15px;color:#333;width:calc(100%);float:right;text-align:left}
form .button-box{margin:25px 0 0;float:left;width:100%;}
form .button-box button{font-size:16px;background:#ff4949;color:#fff;}

.picker-view{width:100%;display:flex;z-index:12;background-color:rgba(0,0,0,0.3);flex-direction:column;justify-content:top;align-items:center;position:fixed;bottom:0rpx;left:0rpx;height:100vh}
.picker-view .box{position:absolute;bottom:0;width:100%;background:#fff}
.button-view{height:40px;line-height:40px;width:100%;padding:0 10px;margin:10rpx auto 0;border-bottom:1px solid #f5f5f5;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box}
picker-view{width:100%;height:400rpx}
.picker-item{line-height:70rpx;margin-left:5rpx;margin-right:5rpx;text-align:center;font-size:30rpx}








