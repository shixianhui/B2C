/* pages/member/order_exchange /order_exchange.wxss */
page{background:#f5f5f5;}
.navbar{ flex: none; display: flex; background: #fff; padding:0 10px;width:100%;box-sizing: border-box;-moz-box-sizing: border-box;-webkit-box-sizing: border-box;margin-bottom:12px; position: fixed;border-bottom:1px solid #f5f5f5;}  
.navbar .item{position: relative; line-height: 40px;display:flex;padding:0 5px;font-size:14px;margin:0 auto;color:#333;}  
.navbar .item.active{color: #ff4949;} 

.list{float:left;width:100%;margin-top:40px;}
.list .commodity-order{margin-bottom:12px;float:left;width:100%;background:#fff;}
.list .order-header{float:left;width:100%;line-height:40px;border-bottom:1px solid #f5f5f5;}
.list .order-header .order-number{float:left;color:#666;font-size:14px;padding-left:15px;}
.list .order-header .type{float:right;color:#ff4949;font-size:14px;padding-right:15px;}
.list .order-content .commodity{display:flex;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;padding:10px 15px;}
.list .order-content .commodity image{width:60px;border-radius:4px;margin-right:10px;}
.list .order-content .commodity .txt{width:calc(80%);line-height:26px;}
.list .order-content .commodity .txt .tit{font-size:14px;color:#333;width:100%;display:flex;}
.list .order-content .commodity .txt .tit .h4{overflow:hidden;width:calc(100%); text-overflow:ellipsis; white-space:nowrap;display:block;}
.list .order-content .commodity .txt .tit .price{font-size:14px; color:#ff4949;float:right;width:calc(30%);text-align:right;}
.list .order-content .commodity .txt .style{font-size:12px;color:#999;line-height:26px;margin-top:8px;}
.list .order-content .commodity .txt .style view{float:left;}
.list .order-content .commodity .txt .style .num{float:right;color:#999;}
.total{border-bottom:1px solid #f5f5f5;font-size:15px;text-align:right;width:100%;line-height:40px;color:#333;padding-right:15px;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;}
.total text{color:#ff4949;}
.list .order-bottom{text-align:center;float:left;width:100%;}
.list .order-bottom view view{float:right;line-height:30px;width:80px;color:#666;background:#e6e6e6;font-size:14px;margin:12px 15px 12px 0;border-radius:4px;}
.list .order-bottom view.pay{color:#fff;background:#ff4949;}
.list .order-bottom view.buyagen{color:#fff;background:#ff4949;}
.list .order-bottom view.pj{color:#fff;background:#ffc125;}