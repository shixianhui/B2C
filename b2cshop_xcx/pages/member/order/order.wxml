<!--pages/member/order/order.wxml-->
<view class="container">
  <view class="navbar page-section-spacing">
    <text wx:for="{{navbar}}" data-idx="{{index}}" data-value="{{item.value}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item.name}}</text>
  </view> 
  <view class="list">
    <view wx:for="{{list}}" wx:key="" data-id="{{item.id}}"  class="commodity-order">
      <view class="order-header">
        <text class="order-number">订单号：{{item.order_number}}</text>
        <text class="type">{{item.status_format}}</text>
      </view>
      <view bindtap="orderView" wx:for="{{item.orderdetailList}}" wx:key="" wx:for-item="product" class="order-content" data-info="{{item}}">
        <view class="commodity">
          <image src="{{product.path_thumb}}" mode="widthFix"></image>
          <view class="txt">
            <view class="tit">
              <text class='h4'>{{product.product_title}}</text>
              <text class="price">￥{{product.old_price}}</text>
            </view>
            <view class="style">
              <view class='li' wx:if="{{product.color_size_open == '1'}}">{{product.product_size_name}}：{{product.size_name}}</view>
              <text class="i" wx:if="{{product.color_size_open == '1'}}">/</text>
              <view class='li' wx:if="{{product.color_size_open == '1'}}">{{product.product_color_name}}：{{product.color_name}}</view>
              <text class="i" wx:if="{{product.color_size_open == '1'}}">/</text>
              <text class="num">数量：x {{product.buy_number}}</text>
            </view>
          </view>
        </view>
      </view>
      <view class="total">
        <text>实付：￥{{item.total}}（含运费：{{item.postage_price}}元）</text>
      </view>
      <view class="order-bottom">
        <view wx:if="{{item.status == '0'}}">
          <view bindtap="pay" data-info="{{item.id}}" class="pay">付款</view>
          <view bindtap="cancel" data-info="{{item.id}}">取消订单</view>
        </view>
        <view wx:elif="{{item.status == '1'}}">
          <view class="pay" bindtap="remindGoods" data-info="{{item.id}}">提醒发货</view>
        </view>
        <view wx:elif="{{item.status == '2'}}">
          <view class="pay" bindtap="confirmGoods" data-info="{{item.id}}">确认收货</view>
        </view>
        <view wx:elif="{{item.status == '3'}}">
          <view wx:if="{{item.is_comment_to_seller == '0'}}" class="pj" bindtap="evaluates" data-info="{{item.id}}">评价</view>
          <view class="buyagen" bindtap="againBuy" data-info="{{item.id}}">再次购买</view>
        </view>
        <view wx:elif="{{item.status == '4'}}">
          <view class="buyagen" bindtap="againBuy" data-info="{{item.id}}">再次购买</view>
        </view>
      </view>
    </view>
  </view>
  <view class="body-view">
    <loading hidden="{{hidden}}">
        加载中...
    </loading>
  </view>
</view>
