page{background:#f5f5f5;}
.container{padding:12px}
.box{background:#fff;border-radius:4px;width:100%;box-sizing:border-box;-moz-box-sizing: border-box;-webkit-box-sizing: border-box;padding:25px;}
.box .tit .txt{font-size:15px;color:#333;margin-bottom:55px}
.box .tit .txt text{font-size:14px;color:#999;margin-left:60px;display:inline-block;}
.box .tit form text{font-size:15px;color:#333;}
.box .tit form .input-box{position:relative;}
.box .tit form .input-box text{position:absolute;font-size:30px;top:20px;}
.box .tit form .input-box input{box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;border-bottom:1px solid #f5f5f5;font-size:30px; line-height:1.4em;padding:20px 30px;height:auto;}
.box .tit form .price{color:#999;font-size:14px;padding:5px 0 15px;display:block}
.button-box{margin:25px 0 0;float:left;width:100%;box-sizing:border-box;-webkit-box-sizing:border-box;-moz-box-sizing: border-box;}
.button-box button{font-size:16px;background:#ff4949;color:#fff;text-align:center;border-radius:4px;line-height:44px;height:44px;}







