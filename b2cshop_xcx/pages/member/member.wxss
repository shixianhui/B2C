/* pages/member/member.wxss */
page{background: #f5f5f5;overflow-x:hidden;}
.member{background:linear-gradient(to right, #ecebeb, #c9c9c9);text-align:center;width:100%;}
.user-info{text-align: center;padding: 20rpx 0 50rpx;}
.user-info .img-box{width: 160rpx;height: 160rpx;border: 2px solid #efefef;border-radius: 50%;overflow: hidden;margin: 0 auto;}
.user-info .name{font-size: 36rpx;color: #444;margin-top: 10rpx;display: block;}
/* 订单 */
.order{width:100%;background:#fff;padding-bottom: 20rpx;}
.order .ul{display: flex;padding: 30rpx 20rpx 48rpx;width: 88%;height: 100rpx;margin: -40rpx auto 0;border-radius: 10rpx; box-shadow:0rpx 6rpx 16rpx 2rpx #dedede;background-color: #fff;}
.order .ul .li{flex: 1;text-align: center;position: relative;z-index: 0;}
.order .ul .li image{width:50%;display:block;margin:0 auto;height:80rpx}
.order .ul .li text{font-size:26rpx;color:#4c4c4c;}
.order .ul .li .i{position: absolute;top: 0rpx;right: 20rpx;z-index: 1;width: 30rpx;height: 30rpx;text-align: center;line-height: 30rpx; font-size: 19rpx;color: #fff;border-radius: 50%;background-color: #ff4949;}
/* 其他功能 */
.common-tools {background:#fff;width:100%;margin-bottom: 50rpx;}
.common-tools .h3{color:#333;font-size:28rpx;padding-left:30rpx;line-height:88rpx;border-bottom: 1px solid #f5f5f5;width:100%;display:block;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;}
.common-tools .tools-list{width:100%;}
.common-tools .tools-list navigator{width:25%;float: left;text-align:center;border-bottom:1px solid #f5f5f5;padding-bottom:20rpx;}
.common-tools .tools-list navigator image{width:30%;display:block;margin:20rpx auto 10rpx;}
.common-tools .tools-list navigator text{font-size:26rpx;color:#4c4c4c;}

.display{display:none;}


