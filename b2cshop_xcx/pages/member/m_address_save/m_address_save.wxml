<!--pages/member/m_address_save/m_address_save.wxml-->
<view class="container">
  <form>
    <view class="input">
      <label>收货人</label>
      <input name="buyer_name" bindinput="input_buyer_name" value="{{content.buyer_name}}" placeholder="请输入真实姓名"></input>
    </view>
    <view class="input">
      <label>手机号码</label>
      <input name="mobile" bindinput="input_mobile" value="{{content.mobile}}" placeholder="请输入11数号码"></input>
    </view>
    <view class="input">
      <label>所在地区</label>
      <view bindtap="selectDistrict" class="city">{{areaInfo}}</view>
    </view>
    <view class="input">
      <textarea name="address"  bindinput="input_address" value="{{content.address}}" placeholder="详细地址"></textarea>
    </view>
    <view class="weui-cell weui-cell_switch input">
      <view class="weui-cell__bd">是否设置为默认地址</view>
      <view class="weui-cell__ft" wx:if="{{content.default=='1'}}">
        <switch bindchange="switchChange" checked />
      </view>
      <view class="weui-cell__ft" wx:else>
        <switch bindchange="switchChange" />
      </view>
    </view>
    <view class="button-box">
    <button bindtap="saveAddress">保存</button>
    </view>
  </form>
</view>

<view class="picker-view" style="visibility:{{addressMenuIsShow ? 'visible':'hidden'}}">
  <view class="box" animation="{{animationAddressMenu}}">
    <view class="button-view">
      <text catchtap="cityCancel">取消</text>
      <text style="float: right;color:#ff4949;" catchtap="citySure">确定</text>
    </view>
    <picker-view bindchange="cityChange" value="{{value}}" wx:key="">
      <picker-view-column>
        <view wx:for="{{provinces}}" wx:key="" class="picker-item">
          {{item.name}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{citys}}" wx:key="" class="picker-item">
          {{item.name}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{areas}}" wx:key="" class="picker-item">
          {{item.name}}</view>
      </picker-view-column>
    </picker-view>
  </view>
</view>

