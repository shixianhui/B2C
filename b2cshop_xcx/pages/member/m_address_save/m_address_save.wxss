@import"../m_info/m_info.wxss";
form{padding:0}
.input{width:100%;float:left;position:relative;border-bottom:1px solid #f5f5f5;display:flex;padding:0 15px;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;}
.input label{float:left;width:calc(50%);line-height:40px;}
.input input{float:left;width:calc(100%);line-height:40px;height:40px;}
.input .city{line-height:24px;width:calc(100%);padding:8px 0;}
.input textarea{width:100%;font-size:14px;padding:8px 0;height:75px;}
.input .weui-cell__bd{float:left;width:calc(100%);line-height:40px;font-size:15px;color:#333;}
.input .weui-cell__ft{float:right;padding:4px 0;}
form .button-box{width:80%;margin:45px 10%;}
