/* pages/member/order_pj/order_pj.wxss */
.pj_list{float:left;width:100%;padding:12px;margin-bottom:12px;box-sizing:border-box;-webkit-box-sizing:border-box;-moz-box-sizing:border-box;border-top:1px solid #f5f5f5;border-bottom:1px solid #f5f5f5;}
.star{float:left;width:100%;border-bottom:1px solid #f5f5f5;padding:0 0 12px;}
.star text{float:left;line-height:30px}
.star view{float:left;width:30px;height:30px}
.star view.product_image{margin-right:10px;}
.star view image{width:100%;height:100%}
.txt{float:left;width:100%;}
.txt textarea{padding:12px 0;font-size:15px;height:100px;}
.txt .pic{width:100%;}
.txt .pic .image view{width:15vw;height:15vw;float:left;margin:0 4vw 3vw 0;position:relative;}
.txt .pic .image view:nth-of-type(5n){margin-right:0;}
.txt .pic .image view icon{position:absolute;top:-6px;right:-6px;background:#fff;border-radius:50%;}
.txt .pic .image view image{width:15vw;height:15vw;}
.txt .pic .addimage{width:15vw;height:15vw;float:left;margin:0 4vw 3vw 0;}

.button-box{margin:25px 10%;float:left;width:80%;}
.button-box button{font-size:16px;background:#ff4949;color:#fff;}
.popover_content{position:absolute;z-index:99;bottom:0;width:100%;padding:15px;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;}
.popover_content view{text-align:center;background:#fff;font-size:14px;line-height:40px;border-radius:8px;overflow:hidden;}
.popover_content view text{display:block;border-bottom:1px solid #f0f0f0;}
.popover_content view text:last-of-typeP{border-bottom:none;}