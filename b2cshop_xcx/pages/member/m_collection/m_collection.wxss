/* pages/member/m-collection/m-Collection.wxss */
page{background:#f5f5f5;}
.list{width:100%;background: #fff;margin-top:15px;}
.list>view{display:flex;flex-direction:row;align-items:center;width:100%;padding-left:15px;position:relative}
.list>view::after{position:absolute;border-bottom:1px solid #f5f5f5;bottom:0;left:0;right:-20%;content:"";}
.list navigator{padding:10px 15px;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;width:100%;display: flex;}
.list navigator image{width:60px;height:60px;border-radius:4px;}
.list navigator .good-info{margin-left: 10px;width: calc(80%);}
.list navigator .good-info .title{font-size: 14px;color:#333;display:block;line-height:25px;margin-bottom:10px;overflow:hidden;white-space: nowrap;text-overflow: ellipsis;}
.list navigator .good-info .price{color:#ff4949;font-size:14px;display:block;line-height:25px;}

.bottom{position:fixed;bottom:0;background: #fff;width:100%;height:50px;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;padding:0 15px;border-top:1px solid #eee;}
.button{float:right;border:1px solid #ccc;font-size:15px;color:#4c4c4c;margin:7px 0;line-height:34px;width:79px;text-align:center;border-radius:4px;background:#fff;position:relative;z-index:9;margin-left:10px;}
.button::after{border:none}
.bottom .allSelect{display: flex;flex-direction: row;height: 50px;align-items: center;color: #333;font-size: 14px;position:absolute;z-index:1;}
.bottom .allSelect-text{margin-left: 10px;}
.wx-icon-success {color:#ff4949;}











