/* pages/member/order-view/order-view.wxss */
page{background:#f5f5f5;}
.header{background:#ff4949;padding:20rpx;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;}
.header text{color:#fff;line-height:100rpx;font-size:34rpx;}
.header image{width:100rpx;float:right;height: 100rpx;}

.address-info{position:relative;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;padding:0 20rpx;background:#fff;margin:28rpx 0;}
.address-info view{font-size:28rpx;color:#333;line-height:70rpx;padding-right:30rpx;}
.address-info .phone{float:right;}
.address-info .navigator-arrow{position:absolute;right:0;top:50%;margin-top:0px;}

.commodity{background:#fff;display:flex;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;padding:20rpx;margin-bottom:20rpx;}
.commodity image{width:120rpx;border-radius:8rpx;margin-right:20rpx;}
.commodity .txt{width:calc(80%);line-height:52rpx;}
.commodity .txt .tit{font-size:28rpx;color:#333;width:100%;display:flex;}
.commodity .txt .tit .h4{overflow:hidden;width:calc(100%); text-overflow:ellipsis; white-space:nowrap;display:block;}
.commodity .txt .tit .price{font-size:28rpx; color:#ff4949;float:right;width:calc(30%);text-align:right;}
.commodity .txt .style{font-size:24rpx;color:#999;line-height:52rpx;margin-top:16rpx;}
.commodity .txt .style view{float:left;}
.commodity .txt .style .num{float:right;color:#999;}

.order-info{background:#fff;width:100%;margin-bottom:28rpx;}
.order-info view{border-bottom:1px solid #f5f5f5;padding:20rpx 30rpx;font-size:30rpx;color:#333;}
.order-info view text{float:right;color:#666;font-size:28rpx;}
.order-info .total{color:#ff4949;}

.order-time{font-size:24rpx;color:#999;padding:20rpx 30rpx;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;background:#fff;margin-bottom:140rpx;}
.order-time text{float:right;}

.bottom{width:100%;background:#fff;height:110rpx;position:fixed;text-align:center;bottom:0;left:0;}
.bottom view view{float:right;line-height:60rpx;width:160rpx;color:#666;background:#e6e6e6;font-size:28rpx;margin:20rpx 20rpx 20rpx 0;border-radius:8rpx;}
.bottom view.pay{color:#fff;background:#ff4949;}
.bottom view.buyagen{color:#fff;background:#ff4949;}
.bottom view.pj{color:#fff;background:#ffc125;}