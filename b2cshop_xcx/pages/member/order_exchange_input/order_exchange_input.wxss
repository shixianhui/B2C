/* pages/member/order_exchange_input/order_exchange_input.wxss */

form{width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;padding:0 15px;}
form .input-box{border-bottom:1px solid #f5f5f5;width:100%;display: flex;line-height:26px;padding:7px 0;}
form .input-box .navigator-arrow{transform:rotate(90deg);margin-top:15px;}
form label{width:calc(46%);float:left;font-size:15px;color:#333;}
form navigator{float:right;font-size:14px;line-height:26px;color:#ff4949;}
form input{width:calc(100%);float:right;font-size:15px;color:#333;line-height:26px;height:26px;}
form .button-box{margin:25px 0;float:left;width:100%;}
form .button-box button{font-size:16px;background:#ff4949;color:#fff;}
form .pic .txt{line-height:26px;font-size:15px;color:#333;padding:7px 0;}
form .pic .txt text{font-size:14px;color:#999;margin-left:5px;}
form .pic .pic_box{width:100%;}
form .pic .pic_box .image view{width:15vw;height:15vw;float:left;margin:0 4vw 3vw 0;position:relative;}
form .pic .pic_box .image view:nth-of-type(5n){margin-right:0;}
form .pic .pic_box .image view icon{position:absolute;top:-6px;right:-6px;background:#fff;border-radius:50%;}
form .pic .pic_box .image view image{width:15vw;height:15vw;}
form .pic .pic_box .addimage{width:15vw;height:15vw;float:left;margin:0 4vw 3vw 0;}

.popover_content{position:absolute;z-index:99;bottom:0;width:100%;padding:15px;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;}
.popover_content view{text-align:center;background:#fff;font-size:14px;line-height:40px;border-radius:8px;overflow:hidden;}
.popover_content view text{display:block;border-bottom:1px solid #f0f0f0;}
.popover_content view text:last-of-typeP{border-bottom:none;}