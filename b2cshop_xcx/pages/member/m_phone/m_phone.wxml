<!--pages/member/m-phone/m-phone.wxml-->
<view class="container">
  <form>
    <view class='input-box'>
      <label>手机号码</label>
      <input type="text" bindinput="input_mobile" placeholder="请输入手机号码"/>
    </view>
    <view class='input-box code-box'>
      <label>验证码</label>
      <input type="text" bindinput="input_smscode" placeholder="请输入验证码"/>
      <button bindtap='sendmsg' class='{{cssMsg}}'>{{sendMsg}}</button>
    </view>
    <view class='input-box'>
      <label>密码</label>
      <input type="text" bindinput="input_password" placeholder="请输入账号密码"/>
    </view>
    <view class='button-box'>
      <button bindtap="binding">绑定</button>
    </view>
  </form>
</view>
