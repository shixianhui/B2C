/* pages/member/order_exchange_product/order_exchange_product.wxss */
page{background:#f5f5f5;}
.header{background:#ff4949;padding:25px 25px;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;}
.header text{color:#fff;line-height:50px;font-size:17px;}
.header image{width:50px;float:right;height: 50px;}

.address-info{position:relative;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;padding:0 15px;background:#fff;margin:14px 0;}
.address-info view{font-size:14px;color:#333;line-height:35px;padding-right:15px;}
.address-info .phone{float:right;}
.address-info .navigator-arrow{position:absolute;right:0;top:50%;margin-top:0px;}

.commodity{background:#fff;display:flex;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;padding:10px 15px;margin-bottom:14px;}
.commodity image{width:60px;border-radius:4px;margin-right:10px;}
.commodity .txt{width:calc(80%);line-height:26px;}
.commodity .txt .tit{font-size:14px;color:#333;width:100%;display:flex;}
.commodity .txt .tit .h4{overflow:hidden;width:calc(100%); text-overflow:ellipsis; white-space:nowrap;display:block;}
.commodity .txt .tit .price{font-size:14px; color:#ff4949;float:right;width:calc(30%);text-align:right;}
.commodity .txt .style{font-size:12px;color:#999;line-height:26px;margin-top:8px;}
.commodity .txt .style view{float:left;}
.commodity .txt .style .num{float:right;color:#999;}

.order-info{background:#fff;width:100%;margin-bottom:14px;}
.order-info view{border-bottom:1px solid #f5f5f5;padding:10px 15px;font-size:15px;color:#333;}
.order-info view text{float:right;color:#666;font-size:14px;}
.order-info .total{color:#ff4949;}

.order-time{font-size:12px;color:#999;padding:10px 15px;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;background:#fff;margin-bottom:69px;}
.order-time text{float:right;}

.bottom{width:100%;background:#fff;height:55px;position:fixed;text-align:center;bottom:0;left:0;}
.bottom view view{float:right;line-height:30px;width:80px;color:#666;background:#e6e6e6;font-size:14px;margin:12px 15px 12px 0;border-radius:4px;}
.bottom view.pay{color:#fff;background:#ff4949;}
.bottom view.buyagen{color:#fff;background:#ff4949;}
.bottom view.pj{color:#fff;background:#ffc125;}