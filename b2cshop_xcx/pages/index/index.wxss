/**index.wxss**/
.page-body{width:100%}
.page-body image{width:100%;}
form{width:100%;padding:20rpx;background:#f5f5f5;display:block;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;}
.search{width:100%;height:60rpx;position:relative;box-sizing:border-box; -moz-box-sizing:border-box;border-radius:100rpx;-webkit-box-sizing: border-box;}
.navigator-hover{background:none; opacity:1;}
.search .placeholder{position:relative;font-size:26rpx;color:#999;z-index:0;width:100%;text-align:center;background:#fff;height:56rpx;line-height:60rpx;border:1rpx solid #e6e6e6;border-radius:100rpx;}
.search .placeholder icon{font-size:28rpx;color:#999;line-height:60rpx;vertical-align:middle;margin-right:6rpx;}

.classly-nav-list{width:100%;padding:30rpx 30rpx 10rpx;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;}
.classly-nav-list navigator{width:18%;float:left;margin-left:9.3%;text-align:center;margin-bottom:20rpx}
.classly-nav-list navigator:nth-of-type(4n+1){margin-left:0}
.classly-nav-list navigator image{width:100%;}
.classly-nav-list navigator text{font-size:28rpx;display:block;color:#666;}

.h3{width:50%;margin:0 auto 50rpx;text-align:center;border-bottom:1rpx solid #333;}
.h3 text{font-size: 34rpx; color:#333;display:inline-block;position:relative;bottom:-20rpx;padding:0 20rpx;background:#fff;}
/* 分类推荐 */
.boutique-recommendation{padding:10rpx 20rpx 0rpx;width:100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;}
.boutique-recommendation scroll-view{white-space:nowrap;height:240rpx;}
.boutique-recommendation navigator{width:240rpx;margin-right:30rpx;display:inline-block;}
.boutique-recommendation navigator:last-of-type{margin-right:0;}
.boutique-recommendation navigator image{width:100%;height:240rpx;border: 1px solid #e6e6e6;box-sizing: border-box;border-radius: 10rpx;}
.boutique-recommendation navigator text{display:block}
.boutique-recommendation navigator text.tit{font-size: 28rpx;overflow: hidden;white-space:nowrap;text-overflow: ellipsis;}
.boutique-recommendation navigator text.price{font-size: 30rpx;color: #ff4949;}
.boutique-recommendation .boutique_img{width: 100%;}
.boutique-recommendation .boutique_img image{width:100%;}

/* 精品推荐 */
.hot-recd{padding:10rpx 20rpx 20rpx;width:100%;box-sizing:border-box;}
.hot-recd .list{display: flex;flex-wrap: wrap;justify-content: space-between;}
.hot-recd .li{width: 49%;margin-bottom:20rpx;border:1rpx solid #e6e6e6;box-sizing:border-box;padding: 10rpx 0;border-radius: 10rpx;}
.hot-recd .li .img-box{width: 326rpx;height: 346rpx;overflow: hidden;display: flex;padding: 0 10rpx;}
.hot-recd .li .img{width: 100%;display: block;margin: auto auto;}
.hot-recd .li .tit{font-size: 28rpx;overflow: hidden;text-overflow: ellipsis;display: -webkit-box; -webkit-line-clamp:2;-webkit-box-orient: vertical;padding:0 10rpx;line-height:1.5em;min-height:2em;}
.hot-recd .li .price{font-size: 30rpx;color: #ff4949;padding:0 10rpx;line-height:2em;}

.news_swiper{padding:10rpx 24rpx;border-bottom:1rpx solid #f5f5f5;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;width:100%;}
.news_swiper .tit{float:left;width:80rpx;background:#ff4949;color:#fff;border-radius:8rpx;margin-right:10rpx;font-size:26rpx;line-height:64rpx;text-align:center;}
.news_swiper swiper{float:left;height:64rpx;width:calc(100% - 180rpx);overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.news_swiper swiper navigator{font-size:26rpx;line-height:64rpx;color:#666;}
.news_swiper .more_news{float:left;width:80rpx;color:#666;border-left:1rpx solid #f5f5f5;border-radius:8rpx;margin-left:8rpx;font-size:26rpx;line-height:64rpx;text-align:right;}

.advertisement{padding:20rpx;width: 100%;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;background:#f5f5f5;margin: 0;}
.advertisement image{width:100%;display: block;}

.scroll-view_H{padding:20rpx 0;}