/* pages/cart/order_confirm/order_confirm.wxss */
page{background:#f5f5f5;}
.container {margin-bottom:100rpx;}
.addresss{width: 100%;box-sizing:border-box;-moz-box-sizing:border-box;background:#fff;margin:20rpx 0;-webkit-box-sizing: border-box;}
.addresss .navigator-text{display:flex;}
.addresss image{float:left;height:50rpx;width:50rpx;margin-right:10rpx;}
.addresss .navigator-text view{font-size:28rpx;color:#333;margin-right:20rpx;width:calc(100% - 40px);}
.addresss .navigator-text .h5{margin-top: 9rpx;}
.addresss view text{float:right;}
.addresss view text.txt{width:100%;}

.cart-box{background:#fff;width:100%;}
.cart-box .item{display: flex;justify-content: space-between;padding: 20rpx;border-bottom: 1px solid #f5f5f5;}
.cart-box .item .img-box{width: 20%;height: 144rpx;}
.cart-box .goods-img{width: 100%;height: 100%;}
.cart-box .goods-info{width: 76%;}
.cart-box .row{color: #333;font-size: 30rpx;}
.cart-box .goods-type{font-size:28rpx;color:#999;display: flex;justify-content: space-between;align-items: center;}
.cart-box .goods-price{font-size:28rpx;color: #ff4949;}  

.total{text-align:right;line-height:88rpx;font-size:26rpx;padding:0 20rpx}
.total text{color:#ff4949}
.freight{width:100%;color:#333;font-size:30rpx;background:#fff;padding:0 20rpx;margin-top:20rpx;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;line-height:80rpx;border-bottom:1px solid #f5f5f5}
.freight .price{color:#ff4949;font-size:28rpx;float:right}
.buyer-message{width:100%;color:#333;font-size:30rpx;background:#fff;padding:0 20rpx;line-height:80rpx;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;display:flex;flex-direction:row;justify-content:space-between;margin-bottom:20rpx}
.buyer-message text{width:calc(30%);float:left}
.buyer-message input{float:right;width:calc(100%);font-size:28rpx;padding:14rpx 0;line-height:52rpx;min-height:52rpx;height:52rpx;text-align:right;color:#666}
.cart-fixbar{position:fixed;bottom:0;height:100rpx;width:100%;padding:0 20rpx;display:flex;flex-direction:row;align-items:center;border-top:1px solid #f5f5f5;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing:border-box;background:#fff;z-index:99}
.cart-fixbar .allSelect{display:flex;flex-direction:row;height:100rpx;align-items:center;color:#333;font-size:28rpx}
.cart-fixbar .allSelect-text{margin-left:20rpx}
.cart-fixbar .count{position:absolute;left:30rpx;color:#ff4949;font-size:30rpx}
.cart-fixbar .count text{color:#333}
.cart-fixbar .order{color:#fff;height:100rpx;line-height:100rpx;position:absolute;right:0px;padding:0 20rpx;font-size:32rpx;text-align:center;background:#ff4949}
.wx-icon-success{color:#ff4949}
.cart-fixbar .allnum{font-size:48rrpx}