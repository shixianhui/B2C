
/* pages/classly/classly.wxss */
.container>form{width:100%;height:120rpx;padding:30rpx;background:#fff;display:block;box-sizing:border-box;-moz-box-sizing:border-box;border-bottom: 1px solid #f5f5f5;-webkit-box-sizing: border-box;position:fixed;top:0;left:0;}
.search{width:100%;height:60rpx;position:relative;box-sizing:border-box; -moz-box-sizing:border-box;-webkit-box-sizing: border-box;border-radius:100rpx;}
.navigator-hover{background:none; opacity:1;}
.search .placeholder{position:relative;font-size:26rpx;color:#999;z-index:0;width:100%;text-align:center;background:#f5f5f5;height:56rpx;line-height:60rpx;border:1px solid #e6e6e6;border-radius:100rpx;}
.search .placeholder icon{font-size:28rpx;color:#999;line-height:60rpx;vertical-align:middle;margin-right:6rpx;}

.container>view{position:relative;width:100%;height:100%;background-color:#fff;color:#939393}

.nav_left{position:fixed;width:24%;background:#f5f5f5;text-align:center;top:120rpx;left:0;bottom:0}
.nav_left .nav_left_items{height:60rpx;line-height:60rpx;padding:14rpx 6rpx;font-size:28rpx;overflow:hidden;white-space:nowrap;text-overflow:ellipsis}
.nav_left .nav_left_items.active{background:#fff;color:#ff4949;border-left:3px solid #ff4949;padding-left:0}

.nav_right{position:fixed;top:120rpx;right:0;width:76%;bottom:0;padding:20rpx;box-sizing:border-box;background:#fff;}
.nav_right .ul{width: 100%;display: flex;flex-wrap: wrap;justify-content: space-between;}
.nav_right .nav_right_items{width:48%;text-align:center;border: 1px solid #efefef;box-sizing: border-box;margin-bottom: 20rpx;border-radius: 10rpx;}
.nav_right .nav_right_items .img-box{width:100%;height:250rpx;overflow: hidden;display: flex;}
.nav_right .nav_right_items image{width: 100%;height:100%; margin: 10rpx;border:1px solid #efefef;box-sizing:border-box}
.nav_right .nav_right_items .txt-box{text-align: left;margin: 10rpx 20rpx;}
.nav_right .nav_right_items .tit-h6{display:block;font-size:26rpx;color:#666;overflow:hidden;white-space:nowrap;text-overflow:ellipsis}
.nav_right .nav_right_items .sell_price{font-size:22rpx;color: #cc0011;}
.nav_right .nav_right_items .sell_price .i{font-size: 34rpx;}