
/* pages/classly/view/view.wxss */
page{background:#f5f5f5;}
.page-body{width:100%}
.page-body image{width:100%;}

.title{width:100%;padding:20rpx 20rpx;box-sizing: border-box;-moz-box-sizing: border-box;-webkit-box-sizing: border-box;background:#fff;margin-bottom:20rpx;}
.title .price .money{font-size:36rpx;color:#ff4949;}
.title .price .money .i{font-size: 30rpx;}
.title .price .old-price{font-size:24rpx;color:#999;}
.title .price .old-price .i{text-decoration:line-through;}
.title .txt{font-size:30rpx;color:#333;overflow:hidden;width:100%;white-space:nowrap;text-overflow:ellipsis;line-height:80rpx;}
.title .h6{display: flex;justify-content: space-between;}
.title .h6 .span{font-size:24rpx;color:#999;}
/* 规格 */
.spec-box{width: 100%;padding: 0 24rpx;box-sizing: border-box;background: #fff;height: 80rpx;line-height: 80rpx;margin-bottom:20rpx;}
.spec-box .text1{font-size: 28rpx;color: #666;float: left;}
.spec-box .text2{font-size: 28rpx;color: #333;float: left;font-weight: bold;margin-left: 15rpx;}
.spec-box view{float: right;margin-top: 37rpx;}
.spec-box view icon{float: left;margin-left: 8rpx;}
.spec-box view icon:first-of-type{width: 8rpx;height: 8rpx;border-radius: 50%;background: #ccc;}
.spec-box view icon:nth-of-type(2){width: 8rpx;height: 8rpx;border-radius: 50%;background: #808080;}
.spec-box view icon:nth-of-type(3){width: 8rpx;height: 8rpx;border-radius: 50%;background: #333;}
/* 规格弹窗 */
.spec-mb .black{display: none;position: fixed;top: 0;left: 0;width: 100%;height: 100%;background: rgba(0, 0, 0, 0.6);z-index: 6;}
.spec-mb.active .black{display: block;}
.spec-mb .dc-content{background: #fff;position: fixed;bottom: 0;left: 0;width: 100%;z-index: 100; transition: All 0.4s ease; transform: translate3d(0,105%,0);}
.spec-mb.active .dc-content{transform: translate3d(0,0,0)!important;}
.dc-content .top-box{border-bottom: 1px solid #efefef;padding: 20rpx;display: flex;justify-content: space-between;}
.dc-content .top-box .img{width: 26%;margin-top: -46rpx;border: 2px solid #e0e0e0;border-radius: 10rpx;}
.dc-content .top-box .txt-box{width: 70%;}
.dc-content .top-box .txt-box .h4{font-size:30rpx;color:#333;padding: 0rpx 0rpx 20rpx;}
.dc-content .top-box .txt-box .h5 .money{font-size:36rpx;color:#ff4949;}
.dc-content .top-box .txt-box .h5 .i{font-size:24rpx;color:#999;padding-left: 10rpx;}
.dc-content .tit{color: #999;font-size: 28rpx;}
.dc-content .bottom-box{padding: 20rpx;}
.dc-content .ul{display: flex;padding: 20rpx 0;flex-wrap: wrap;}
.dc-content .ul .li{font-size: 26rpx;color: #333;padding: 10rpx 20rpx;border: 1px solid #bdbdbd;margin: 0 10rpx 10rpx 0;border-radius: 10rpx;}
.dc-content .ul .li.active{color: #ff4949;border-color: #ff4949;}
.dc-content .sub-add-box{display: flex;padding: 20rpx 0;}
.dc-content .sub-add-box .bnts{border: 1px solid #bdbdbd;background-color: #efefef;border-radius: 10rpx;width: 60rpx;text-align: center;}
.dc-content .sub-add-box .nums{font-size: 30rpx;width: 40rpx;padding: 0 10rpx;text-align: center;}
.dc-content .btn-box.active{background-color: #ff4949;}
.dc-content .btn-box{text-align: center;background-color: #888;color: #fff;font-size: 30rpx;padding: 20rpx 0;}

