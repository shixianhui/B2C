.evaluate{width:100%;background:#fff;margin-bottom:20rpx;}
.evaluate .more{position:relative;height:90rpx;padding:0 30rpx;box-sizing: border-box;-moz-box-sizing: border-box;-webkit-box-sizing: border-box;font-size:28rpx;color:#333;width:100%;border-bottom:1px solid #f5f5f5;line-height:90rpx;}
.evaluate .more .navigator-arrow{position:absolute;right:0;top:50%;margin-top:-1px;}
.evaluate .list{padding:0 30rpx;}
.evaluate .list .user{float:left;width:100%;padding:12rpx 0;line-height:54rpx;}
.evaluate .list .user image{width:54rpx;float:left;border-radius:50%;height:54rpx;}
.evaluate .list .user .name{float:left;font-size:26rpx;margin-left:10rpx;color:#4c4c4c;}
.evaluate .list .user .time{float:right;font-size:24rpx;color:#999;}
.evaluate .list .txt{width:100%;}
.evaluate .list .txt text{font-size:28rpx;color:#4c4c4c;display:block;padding:40rpx 0 20rpx;}
.evaluate .list .txt .pic-box{display:block;padding-bottom:10rpx;}
.evaluate .list .txt .pic-box image{width:160rpx;border-radius:8rpx;margin-right:10rpx;height:160rpx;}
.evaluate .list .txt .record-num{float:right;height:30rpx;padding:20rpx 0 20rpx 20rpx;}
.evaluate .list .txt .record-num image{width:30rpx;float:left;}
.evaluate .list .txt .record-num text{display:inline-block;padding:0;font-size:24rpx;line-height:30rpx;vertical-align:top;color:#a0a0a0;margin-left:10rpx}

.details{width:100%;position:relative;background:#fff;margin-bottom:110rpx;}
.details .txt{width:100%;position:relative;height:90rpx;line-height:90rpx;font-size:28rpx;padding:0 30rpx;color:#333;box-sizing: border-box;}
.details .view image{width:100%;display:block}
.details image{width: 100%;display: block;}

.bottom{position:fixed;bottom:0;left:0;width:100%;height:100rpx;background:#fff;border-top:1px solid #f5f5f5;display:flex;z-index:99;}
.bottom navigator{width:calc(100%);text-align:center;}
.bottom view{width:calc(100%);text-align:center;}
.bottom image{width:44rpx;display:block;margin:0 auto 4rpx;}
.bottom .collection{font-size:20rpx;color:#999;width:calc(50%);padding:10rpx 0 0;}
.bottom .collection2{font-size:20rpx;color:#ff4949;width:calc(50%);padding:10rpx 0 0;}
.bottom .cart{font-size:20rpx;color:#999;width:calc(50%);border-left:1px solid #f5f5f5;padding:10rpx 0 0;}
.bottom .join{font-size:30rpx;color:#fff;background:#ffad3e;line-height:100rpx;}
.bottom .buy{font-size:30rpx;color:#fff;background:#ff4949;line-height:100rpx;}