/* pages/classly/view_pj/view_pj.wxss */
page{background:#f5f5f5;}
.list{padding:0 20rpx 10rpx;width:100%;box-sizing:border-box;-moz-box-sizing: border-box;-webkit-box-sizing:border-box;background:#fff;margin-bottom:20rpx;}
.list .user{float:left;width:100%;padding:12rpx 0;line-height:54rpx;}
.list .user image{width:54rpx;float:left;border-radius:50%;height:54rpx;}
.list .user .name{float:left;font-size:26rpx;margin-left:10rpx;color:#4c4c4c;}
.list .user .time{float:right;font-size:24rpx;color:#999;}
.list .txt{width:100%;}
.list .txt text{font-size:28rpx;color:#4c4c4c;display:block;padding:20rpx 0 20rpx;}
.list .txt .pic-box{display:block;}
.list .txt .pic-box image{width:160rpx;border-radius:8rpx;margin-right:10rpx;height:160rpx;}
.list .txt .record-num{float:right;height:30rpx;padding:20rpx 0 20rpx 20rpx;}
.list .txt .record-num image{width:30rpx;float:left;}
.list .txt .record-num text{display:inline-block;padding:0;font-size:24rpx;line-height:30rpx;vertical-align:top;color:#a0a0a0;margin-left:10rpx}
.list .star-box{display:flex;height:64rpx;padding:20rpx 0 0;width:100%;}
.list .star-box text{font-size:28rpx;width:120rpx;line-height:64rpx;}
.list .star-box image{width:64rpx;height:64rpx;}