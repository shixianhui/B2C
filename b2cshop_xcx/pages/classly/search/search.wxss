/* pages/classly/search/search.wxss */
form{width:100%;height:120rpx;padding:30rpx;background:#fff;display:block;box-sizing:border-box;border-bottom: 1px solid #f5f5f5;}
.search{width:80%;height:60rpx;position:relative;box-sizing:border-box; border-radius:100rpx;float:left;}
.navigator-hover{background:none; opacity:1;}
.search .placeholder{position:relative;font-size:26rpx;color:#999;z-index:0;width:100%;text-align:center;background:#f5f5f5;height:56rpx;line-height:60rpx;border-radius:100rpx;}
.search .placeholder icon{font-size:28rpx;color:#999;line-height:60rpx;vertical-align:middle;margin-right:6rpx;}
.search input{position:absolute;top:0;border:1px solid #e6e6e6;border-radius:100rpx; padding:12rpx 30rpx;line-height:32rpx;font-size:28rpx;color: #333;height:56rpx;width:100%;box-sizing:border-box;text-align:center}
form .search_btn{float:right;width:18%;font-size:28rpx;height:56rpx;padding:0;line-height:56rpx;}
form .search_btn.active{background:#ff4949;color:#fff;}

.history,.hot{width:100%;padding:0 30rpx;box-sizing:border-box;-moz-box-sizing:border-box;-webkit-box-sizing: border-box;}
.title{float:left;width:100%;line-height:64rpx;margin-top:20rpx;}
.title text{font-size:28rpx;color:#333;}
.title .operation{float:right;color:#ff4949;font-size:28rpx;}
.list text{float:left;font-size:28rpx;color:#999;background:#eee;margin-right:16rpx;line-height:56rpx;border-radius:8rpx;padding:0 16rpx;margin-bottom:16rpx;}